---
const { frontmatter } = Astro.props;

import Layout from '../layouts/Layout.astro';

const renderImage = frontmatter.image == null ? "hidden" : "";

import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

const allImgs = import.meta.glob<{ default: ImageMetadata }>('../assets/*.webp', { eager: true });
const imgSrc = "../assets/" + frontmatter.image.src;

if (!allImgs[imgSrc]) {
  console.error(`Image not found: ${imgSrc}`);
}

const imageMetadata = allImgs[imgSrc];
---

<Layout pageTitle={frontmatter.title}>
    <br>
    <div class="container is-fluid">
        <div class="columns">
            <div class="column">
                <div class="notification has-background-primary-soft">
                    <div class="content">
                        <h1 class="title">{frontmatter.title}</h1>
                        <slot />
                    </div>
                </div>
            </div>
            <div class=`column is-one-third ${renderImage}`>
                <Image
                    class="content-image"
                    src={imageMetadata.default}
                    alt={frontmatter.image.alt}
                    inferSize={true}
                />
            </div>
        </div>
    </div>
</Layout>

<style>
    .content-image {
        border-radius: 10px;
        object-fit: cover;
    }
    .hidden {
        display: none;
    }
</style>