---
// Necessary imports
const { frontmatter } = Astro.props;

import Layout from '../layouts/Layout.astro';

import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

// Get all of the images from the directory
const allImgs = import.meta.glob<{ default: ImageMetadata }>('../assets/*.webp', { eager: true });

// Get the image if it exists
let imgSrc = frontmatter.image?.src ? "../assets/" + frontmatter.image.src : null;
let imageMetadata = imgSrc ? allImgs[imgSrc] : null;

// Give an error if it doesn't exist
if (imgSrc && !imageMetadata) {
  console.error(`Image not found: ${imgSrc}`);
}
---

<Layout pageTitle={frontmatter.title}>
    <br>
    <div class="container is-fluid">
        <div class="columns">
            <div class="column">
                <div class="notification has-background-primary-soft">
                    <div class="content">
                        <h1 class="title">{frontmatter.title}</h1>
                        <slot />
                    </div>
                </div>
            </div>
            {imageMetadata ? (
              <div class="column is-one-third">
                <Image
                    class="content-image"
                    src={imageMetadata.default}
                    alt={frontmatter.image.alt || 'Image'}
                    inferSize={true}
                />
              </div>
            ) : null}
        </div>
    </div>
</Layout>

<style>
    .content-image {
        border-radius: 10px;
        object-fit: cover;
    }
</style>
