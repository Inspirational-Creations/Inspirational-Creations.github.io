---
const { frontmatter } = Astro.props;

import Layout from "../layouts/Layout.astro";

import "../styles/global.scss";
---

<Layout>
    <br>
    <div class="container">
        <div class="columns">
            <div class="column">
                <img class="product-image" src={frontmatter.image.src} alt={frontmatter.image.alt}>
            </div>
            <div class="column">
                <div class="content">
                    <h1>{frontmatter.title}</h1>
                    <h4>{frontmatter.price}</h4>
                    <span class="tag is-primary is-medium">{frontmatter.category}</span>
                    <br><br>
                    <slot />
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .product-image {
        border-radius: 10px;
    }
</style>